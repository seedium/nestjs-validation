{
  "name": "nestjs-validation",
  "version": "1.0.0",
  "description": "Validation module for NestJS application",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/seedium/nestjs-validation.git"
  },
  "keywords": [
    "nestjs",
    "typescript",
    "seedium"
  ],
  "author": "Bogdan Sklyarov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/seedium/nestjs-validation/issues"
  },
  "homepage": "https://github.com/seedium/nestjs-validation#readme",
  "scripts": {
    "clean": "rimraf -rf 'dist' 'tsconfig.tsbuildinfo'",
    "build": "yarn clean && tsc -p tsconfig.json",
    "lint": "eslint lib/**/*.ts",
    "lint:test": "eslint -c .eslintrc.spec.yaml test/**/*.spec.ts",
    "format": "prettier '{lib,test}/**/*.ts' '{lib,test}/*.ts'",
    "test": "yarn clean && nyc --nycrc-path .nycrc.yaml mocha --reporter spec --exit 'test/**/*.spec.ts' 'test/*.spec.ts'",
    "prerelease": "yarn build",
    "release": "release-it"
  },
  "devDependencies": {
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-angular": "11.0.0",
    "@istanbuljs/nyc-config-typescript": "1.0.1",
    "@nestjs/common": "7.5.4",
    "@nestjs/core": "7.5.4",
    "@nestjs/platform-express": "^7.6.5",
    "@nestjs/swagger": "^4.7.8",
    "@nestjs/testing": "7.5.4",
    "@release-it/conventional-changelog": "2.0.1",
    "@types/chai": "4.2.14",
    "@types/lodash": "^4.14.167",
    "@types/mocha": "8.2.0",
    "@types/node": "14.14.8",
    "@types/sinon": "9.0.8",
    "@types/sinon-chai": "3.2.5",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "4.8.1",
    "@typescript-eslint/parser": "4.8.1",
    "chai": "4.2.0",
    "eslint": "7.13.0",
    "eslint-config-prettier": "6.15.0",
    "fluent-schema": "^1.1.0",
    "husky": "4.3.0",
    "light-my-request": "^4.4.1",
    "lint-staged": "10.5.1",
    "lodash": "^4.17.20",
    "mocha": "8.2.1",
    "nyc": "15.1.0",
    "prettier": "2.1.2",
    "reflect-metadata": "^0.1.13",
    "release-it": "14.2.1",
    "rimraf": "3.0.2",
    "rxjs": "^6.6.3",
    "sinon": "^9.2.3",
    "sinon-chai": "3.5.0",
    "source-map-support": "0.5.19",
    "supertest": "^6.0.1",
    "ts-node": "9.0.0",
    "ts-toolbelt": "8.0.7",
    "tslib": "2.0.3",
    "typescript": "4.0.5"
  },
  "peerDependencies": {
    "@nestjs/common": "^6.0.0 || ^7.0.0",
    "@nestjs/core": "^6.0.0 || ^7.0.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.0.0"
  },
  "dependencies": {
    "ajv": "^7.0.3",
    "ajv-formats": "^1.5.1"
  }
}
